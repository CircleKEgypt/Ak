<h2>Create User</h2>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label asp-for="User1">Username</label>
        <input asp-for="User1" class="form-control" style="width:250px" />
        <span asp-validation-for="User1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" style="width:250px" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role">Role</label>
        <select asp-for="Role" class="FilterSelect form-control" style="width:235px">
            <option value="Manager">Manager</option>
            <option value="TerrManager">TerrManager</option>
            <option value="FoodManager">Food Manager</option>
            <option value="Sales_NewS">Sales_NewS</option>
            <option value="Sales_NewS_Stock">Sales_NewS_Stock</option>
            <option value="Sales_NewS_Tender">Sales_NewS_Tender</option>
            <option value="Sales_NewS_Stock_Tender">Sales_NewS_Stock_Tender</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department">Department</label>
        <input asp-for="Department" class="form-control" style="width:250px" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create User</button>
</form>
<a asp-controller="Login" asp-action="DisplayUsers" class="btn btn-primary">Display Users</a>

